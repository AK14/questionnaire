<body>

<div class="container-xxl position-relative bg-white d-flex p-0" >
    <!-- Sign In Start -->
    <div class="container-fluid">

        <div class="row h-100 p-4 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="container w-50 px-4 mt-5">
                <div class="h3 mb-4">Авторизация</div>
                <form action="/login" method="post" id="login-form">

                    <div class="form-group mb-2">
                        <label for="login"> Логин </label>
                        <input type="text" class="form-control" name="login" placeholder="">
                    </div>

                    <div class="form-group mb-2">
                        <label for="password"> Пароль </label>
                        <input type="password" class="form-control" name="password" placeholder="">
                    </div>

                    <input type="submit" class="btn btn-secondary" value="Войти">
                </form>
            </div>
            <!-- Footer Start -->
            <%- include("../partials/footer.ejs") %>
            <!-- Footer End -->
        </div>

    </div>

    <!-- Sign In End -->
</div>

