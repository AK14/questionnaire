<% for(var i=0; i<quests.length;i++) {%>
<div class="card col-3 m-1">
    <div class="card-body">
        <div class="card-title"><%=quests[i].title %> </div>
        <div class="description"> <%=quests[i].description %> </div>
    </div>
    <div class="bt-group card-footer    ">
        <a href="/quests/<%=quests[i]._id %>" class="change-item btn btn-sm btn-outline-primary">
            Изменить
        </a>
        <button class="delete-item btn btn-sm btn-outline-danger" data-itemId="<%=quests[i]._id %>"> Удалить </button>
    </div>
</div>
<%} %>