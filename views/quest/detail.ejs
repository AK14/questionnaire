<html lang="ru">
<head>
    <title> <%=itemData.title %> </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/public/style.css">
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/font-awesome.css">
    <script type="text/javascript" src="/public/popper.min.js" defer></script>
    <script type="text/javascript" src="/js/jquery.min.js" defer></script>
    <script type="text/javascript" src="/js/index.js" defer></script>
    <script type="text/javascript" src="/js/quests/index.js" defer></script>
    <script type="text/javascript" src="/js/questions/index.js" defer></script>
    <script type="text/javascript" src="/public/js/bootstrap.bundle.min.js" defer></script>
</head>
<body>
<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Sidebar Start -->
    <%- include("../partials/sidebar.ejs") %>
    <!-- Sidebar End -->

    <!-- Content Start -->
    <div class="content">
        <!-- Navbar Start -->
        <%- include("../partials/navbar.ejs") %>
        <!-- Navbar End -->

        <!-- Content Start -->

        <div class="container-fluid pt-4 px-4">
            <div class="h-75 bg-light rounded align-items-center justify-content-center mx-0">
                <div class="col-md-12 text-center border-bottom rounded p-4 mb-4">
                    <% if(itemData.title) {%>
                    <div class="h4"><%=itemData.title %></div>
                    <%}%>
                    <% if(itemData.description) {%>
                    <div class="description">
                        <%=itemData.description%>
                    </div>
                    <%}%>
                    <button class="btn btn-outline-success"
                            data-bs-toggle="modal"
                            data-bs-target="#newQuestion">
                    Добавить вопрос </button>
                    <button type="button" class="btn btn-square btn-outline-secondary m-2 change-item"
                            data-bs-toggle="modal"
                            data-bs-target="#editItem"
                            data-itemId="<%= itemData.id %>">
                        <i class="fa fa-pencil"></i>
                    </button>
                </div>
                <div id="questions-content" class="container">
                    <% if(itemData.questions) {%>
                        <div class="row border-bottom pb-2 font-weight-lighter text-muted text-uppercase">
                            <div class="col-4 text-center"> Вопрос </div>
                            <div class="col-6 text-center "> Ответы </div>
                            <div class="col-2"> </div>
                        </div>
                    <% for(question of itemData.questions) {%>
                        <div class="row p-2 mb-2 border-bottom">
                            <div class="mt-4 col-4 text-center ">
                                <div class=""><%= question.title %> </div>
                                <div class=""> <%= question.description %> </div>
                                <div class="align-bottom mt-4">
                                    <!--
                                    <button type="button" class="btn btn-sm btn-outline-primary m-2" data-question="<%= question._id%>">
                                        <i class="fa fa-edit me-2"></i>
                                        Изменить
                                    </button>
                                    -->


                                </div>
                            </div>
                            <div class="col-6 text-center border-start">
                                <% for(answer of question.answers) {%>
                                    <p><%= answer %></p>
                                <%} %>
                            </div>
                            <div class="col-2">
                                <button type="button" class="btn btn-sm btn-outline-danger m-2" data-question="<%= question._id%>">
                                    <i class="fa fa-trash me-2"></i>
                                    Удалить
                                </button>
                            </div>
                        </div>
                    <%} %>
                <% }%>
                </div>

            </div>
        </div>
        <!-- Content End -->


        <!-- Footer Start -->
        <%- include("../partials/footer.ejs") %>
        <%- include("../quest/edit_modal.ejs") %>
        <%- include("../questions/create_modal.ejs") %>
        <!-- Footer End -->
    </div>
    <!-- Content End -->
</div>

</body>
</html>
