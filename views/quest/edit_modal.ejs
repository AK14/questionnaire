<div class="modal" tabindex="-1" id="editItem">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Изменить опрос</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="#" id="edit-item-form">
                    <input type="hidden" name="id">
                    <label for="title" class="form-label"> Название </label>
                    <input type="text" class="form-control" name="title" placeholder="" >

                    <label for="floatingTextarea" class="mt-4">Описание</label>
                    <textarea class="form-control" name="description" placeholder="" id="floatingTextarea"></textarea>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="submit" form="edit-item-form" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</div>