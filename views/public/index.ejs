<html lang="ru">
<head>
    <title> <%=quest.title %> </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/public/style.css">
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/font-awesome.css">
    <script type="text/javascript" src="/public/popper.min.js" defer></script>
    <script type="text/javascript" src="/js/jquery.min.js" defer></script>
    <script type="text/javascript" src="/js/index.js" defer></script>
    <script type="text/javascript" src="/public/js/quiz/index.js" defer></script>
    <script type="text/javascript" src="/public/js/bootstrap.bundle.min.js" defer></script>

    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>-->
</head>
<body>

<div class="container-xxl position-relative bg-white d-flex p-0" >
    <!-- Sign In Start -->
    <div class="container-fluid ">
        <div class="row p-4 align-items-start " id="quiz_detail">
            <div class="container">
            <% if(quest.title){%>
                <div class="h3 title"> <%= quest.title %> </div>
            <%}%>
                <div class="row">
                    <% if(quest.description){%>
                        <div class="description col-8"> <%= quest.description %> </div>
                    <%}%>
                    <a href="/" class="col-2 offset-2 btn btn-sm btn-outline-warning"> <i class="fa fa-arrow-left" aria-hidden="true"></i> Вернуться  </a>
                </div>

            </div>

        </div>

        <div class="container-fluid px-4">
            <div style="display: none" class="quiz-data"><%= JSON.stringify(quest) %></div>

            <div id="questions" name="questions" class="bg-light col-8 offset-1 mt-4 " ></div>

        </div>

        <!-- Footer Start -->
        <%- include("../partials/footer.ejs") %>
        <%- include("../partials/alert-modal.ejs") %>
            <!-- Footer End -->


    </div>

    <!-- Sign In End -->
</div>

</body>
</html>
